@model IPageViewModel<SitePage>
<!DOCTYPE html>
<html lang="@Model.Layout.Culture">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@Model.Layout.Title</title>
		<link href="/Style/bootstrap.css" rel="stylesheet" />
		<link href="/Style/site.css" rel="stylesheet" />
	</head>
	<body>
		<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
			<a class="navbar-brand" href="/">Home</a>
			<button aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" type="button">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbar">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<a class="nav-link" href="#">First</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" href="#">Second</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">Third</a>
					</li>
				</ul>
				<ul class="navbar-nav">
					<li class="nav-item active">
						<span class="nav-link active">@Model.Layout.Culture.NativeName</span>
					</li>
				</ul>
			</div>
		</nav>
		<main role="main" class="container">
			<div class="row">
				<div class="col-md-12">
					@RenderBody()
				</div>
			</div>
		</main><!-- /.container -->
		<script src="/Scripts/jquery.js"></script>
		<script src="/Scripts/bootstrap.js"></script>
	</body>
</html>